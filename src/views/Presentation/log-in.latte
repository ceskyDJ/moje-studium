{layout $layoutView}

{block content}
    <div class="page form-page">
        <header class="content-header">
            <h2 class="content-heading">Přihlášení</h2>
        </header>


        <section class="content-container">
            <form method="post" action="" class="app-form">
                {var $oldData = $request->getPost()}
                <div class="form-inputs">
                    <div class="form-input-row">
                        <label for="username" class="form-label">Přezdívka (nebo email)</label>
                        <input name="username" type="text" id="username" class="form-input" autocomplete="username" required value="{$oldData['username'] ?? ""}" />
                        {*<i class="form-input-status positive"></i>*}
                    </div>
                    <div class="form-input-row">
                        <label for="password" class="form-label">Heslo</label>
                        <input name="password" type="password" id="password" class="form-input" autocomplete="current-password" required />
                        {*<i class="form-input-status positive"></i>*}
                    </div>
                </div>

                <div class="form-alerts" n:foreach="(array)$messages as $message">
                    <p n:class="form-alert, $message['type']">{$message['text']}</p>
                </div>

                <div class="form-control">
                    <input type="submit" value="Přihlásit se" class="form-button" />
                </div>
            </form>
        </section>
    </div>
{/block}